extends ../layouts/main-layout.pug

block content
    main
        if orders.length <= 0
            h1 Nothing there!
        else
            ul.orders
                each order in orders
                    a(href=`/orders/${order._id}`) Invoices 
                    li.orders__item
                        h1 Order - #{order.user.email}
                        ul.orders__products
                            each p in order.products
                                li.orders__products-item
                                    | #{p.product.title} - #{order._id} 
                            