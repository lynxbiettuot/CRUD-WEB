extends ../layouts/main-layout.pug

block content 
    main
        if errorMessage.length > 0
            div(class = 'user-message', class= 'user-message--error') #{errorMessage}
        form.login-form(action='/new-password', method="POST")
            .align-form 
                .form-control
                    label(for="password") Password
                    input(type="password", name="password")#password
                div.form-control
                    label(for="confirmPassword") Confirm Password
                    input(type="password" name="confirmPassword")#confirmPassword
                input(type="hidden" name="userId" value=userId)
                input(type="hidden" name="passwordToken" value=passwordToken)
                input(type="hidden" name="_csrf" value=csrfToken)
                button.btn(type="submit") Update Password
